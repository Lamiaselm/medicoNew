<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/treatment_item"
        android:layout_width="306dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/green_list"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/ic_assignment_24px" />

        <TextView
            android:id="@+id/nom_trt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/grey_5A"
            android:textSize="17dp"
            android:text="TextView" />
        <TextView
            android:id="@+id/nom_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:textColor="@color/grey_BC"
            android:layout_marginLeft="80dp"
            android:textSize="13dp"
            android:text="TextView" />
        <TextView
            android:id="@+id/duree_trt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="190dp"
            android:textSize="12dp"
            android:textColor="@color/red"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>